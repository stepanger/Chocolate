{
    "manifest_version": 2, 
    "name": "Chocolate", 
    "version": "0.3",
    "description": "Блокирует нежелательный сайт или страницу",
    "icons": { 
        "16": "icon/icon16.png",
        "48": "icon/icon48.png",
        "128": "icon/icon128.png"
    },
    "browser_action": {
        "default_title": "Chocolate",
        "default_popup": "popup.html"
    },
    "author": "Stepan (email:creadtive472@gmail.com)",
    "background": {
        "scripts": [
            "build/jquery-1.11.3.min.js",
            "src/config.js",
            "src/storage.js",
            "src/redirect.js",
            "src/updateBase.js",
            "src/blockPage.js",
            "src/blockWebRequest.js",
            "src/startPage.js",
            "src/menu.js",
            "src/startApp.js"
        ],
        "persistent": true
    },
    "short_name": "Chocolate",
    "permissions": [
        "idle",
        "notifications",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "storage",
        "contextMenus",
        "<all_urls>"
    ],
    "content_scripts":[
        {
            "js":[
                "build/jquery-1.11.3.min.js"
            ],
            "matches":[
                "<all_urls>"
            ],
            "run_at": "document_start"
        }
    ]
}